<section class="featured-album container clearfix">
  <aside>
    <%= link_to image_tag(@featured_album.image_url), @featured_album %>
  </aside>

  <h1>Featured Album</h1>
  <h2><%= link_to @featured_album.title, @featured_album %></h2>
  <h3>by <%= link_to @featured_album.artist.name, @featured_album.artist %></h3>
  <%= button_to "Add to cart", carts_path(album_id: @featured_album.id)%>
</section>

<div class="container section-container genres-container">
  <section class="genres">
    <h2>Genres</h2>
    <ul class="genres">
      <% @genres.each do |genre| %>
        <li><%= link_to genre.name, genre %></li>
      <% end %>
    </ul>
  </section>
</div>

<div class="container section-container">
  <section class="clearfix">
    <h2>All</h2>
    <% @albums.each do |album| %>
      <div class="preview">
        <%= link_to image_tag(album.image_url), album  %>
        <h3 class="album-title"><%= link_to album.title, album %></h3>
        <h3 class="artist"><%= link_to album.artist.name, album.artist %></h3>
        <h3 class="cost">$<%= album.formatted_price %></h3>
        <%= button_to "Add to cart", carts_path(album_id: album.id)%>
      </div>
    <% end %>
  </section>
</div>
