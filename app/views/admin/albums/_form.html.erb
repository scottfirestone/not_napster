<%= form_for [:admin, @album] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :slug %>
  <%= f.text_field :slug %>
  <br>
  <%= f.label :artist_id %>
  <%= f.collection_select(:artist_id, @artists, :id, :name, { include_blank: 'Select an artist' }, { class: 'artistSelect' })  %>
  <br>
  <%= f.label :genre_id %>
  <%= f.collection_select(:genre_id, @genres, :id, :name, { include_blank: 'Select a genre' }, { class: 'genreSelect' }) %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.label :release_year %>
  <%= f.text_field :release_year %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :expiry_date %>
  <%= f.date_select :expiry_date %>

  <%= f.submit submit_name %>
<% end %>
