<section class="container section-container order-section">
  <h1>Album Info</h1>

  <table>
    <thead>
      <tr>
        <th class="ljust">Album</th>
        <th>Title</th>
        <th>Description</th>
        <th>Artist</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <% @albums.each do |album| %>
        <tr>
          <td class="ljust"><%= image_tag(album.image_url) %></td>
          <td><%= link_to album.title, album_path(album) %></td>
          <td><%= album.description %></td>
          <td><%= album.artist.name %></td>
          <td><%= link_to "Edit", edit_admin_album_path(album) %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="4"><%= link_to "New Album", new_admin_album_path %></td>
      </tr>
    </tfoot>
  </table>
</section>
