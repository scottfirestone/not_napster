<section class="container section-container order-section">
  <h1>Order <%= @order.id %> Details</h1>
  <h2>Order Placed: <%= @order.time_format %> </h2>
  <table>
    <thead>
      <tr>
        <th class="ljust">Album(s)</th>
        <th>Price</th>
        <th>qty</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_albums.each do |order_album| %>
        <tr>
          <td class="ljust"><%= link_to order_album.album.title, album_path(order_album.album) %></td>
          <td>$<%= order_album.album.formatted_price %></td>
          <td><%= order_album.quantity %></td>
          <td>$<%= order_album.formatted_sub_total %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr colspan="4">
        <th colspan="4">Total</th>
      </tr>
      <tr>
        <td colspan="4">$<%= @order.formatted_total %></td>
      </tr>
    </tfoot>
  </table>
</section>
